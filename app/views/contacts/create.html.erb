<% provide(:title, "Contact") %>
<h1><%= yield(:title) %></h1>
 <h2>お問い合わせフォーム</h2>

  <div class="row">
    <div class="span6 offset3">
      <%= form_for @contact, :url => contact_confirm_path do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :content %>
        <%= f.text_field :content %>

        <%= f.submit "送信内容を確認", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
